<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:minHeight="@dimen/list_item_height"
    android:paddingTop="@dimen/content_spacing"
    android:paddingBottom="@dimen/content_spacing"
    android:paddingLeft="@dimen/rcv_item_margin"
    android:paddingRight="@dimen/rcv_item_margin"
    android:gravity="end">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/balloon_out"
        android:layout_marginLeft="@dimen/profile_image_size">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="some text here"
            android:id="@+id/text_message"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:paddingLeft="@dimen/content_spacing"
            android:paddingTop="@dimen/content_spacing"
            android:paddingRight="@dimen/content_spacing"
            android:singleLine="false"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_message"
            tools:text="14:35"
            android:gravity="bottom|start"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            android:padding="@dimen/content_spacing" />

    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/profile_image_size"
        android:layout_height="@dimen/profile_image_size"
        android:src="@drawable/user" />

</LinearLayout>