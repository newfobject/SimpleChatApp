<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="start"
    android:measureWithLargestChild="false"
    android:minHeight="@dimen/list_item_height"
    android:paddingLeft="@dimen/rcv_item_margin"
    android:paddingRight="@dimen/rcv_item_margin"
    android:paddingTop="@dimen/content_spacing"
    android:paddingBottom="@dimen/content_spacing">

    <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:orientation="vertical"-->
        <!--android:layout_gravity="center">-->

    <!--</LinearLayout>-->

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/profile_image_size"
        android:layout_height="@dimen/profile_image_size"
        android:src="@drawable/user"
        android:layout_gravity="top" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/balloon_in"
        android:layout_gravity="top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="some text here"
            android:id="@+id/text_message"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/content_spacing"
            android:paddingTop="@dimen/content_spacing"
            android:paddingRight="@dimen/content_spacing" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_message"
            android:text="14:35"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
            android:gravity="start"
            android:textColor="@color/white"
            android:padding="@dimen/content_spacing" />

    </LinearLayout>

</LinearLayout>